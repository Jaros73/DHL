@page "{id:int}"
@model DHL.Pages.Users.DeleteModel
@{
    ViewData["Title"] = "Delete User";
}

<h2>Delete User</h2>

<p>Are you sure you want to delete this user?</p>

<table class="table">
    <tr>
        <th>ID:</th>
        <td>@Model.User2.Id</td>
    </tr>
    <tr>
        <th>Full Name:</th>
        <td>@Model.User2.FullName</td>
    </tr>
    <tr>
        <th>Email:</th>
        <td>@Model.User2.Email</td>
    </tr>
    <tr>
        <th>Role:</th>
        <td>@Model.User2.Role</td>
    </tr>
</table>

<form method="post">
    <input type="hidden" asp-for="User2.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
